{
    "info": {
        "_postman_id": "redis-test-collection",
        "name": "Redis Test API",
        "description": "Collection for testing Redis Cache with MySQL fallback",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get Test Data",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/test",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "test"
                    ]
                },
                "description": "Checks Redis cache, if miss fetches from MySQL and caches it for 60s."
            },
            "response": []
        },
        {
            "name": "Clear Cache",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/test/clear",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "test",
                        "clear"
                    ]
                },
                "description": "Deletes the 'test:data' key from Redis."
            },
            "response": []
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            },
            "response": []
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost",
            "type": "string"
        }
    ]
}